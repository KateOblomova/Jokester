@model JokesApp.Models.Joke

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new pun</h1>

<hr style="max-width: 250px"/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="background-color:grey; padding: 20px; border-radius: 7%; margin-bottom: 20px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label style="color:black" asp-for="JokeQuestion" class="control-label"></label>
                <input asp-for="JokeQuestion" class="form-control" />
                <span asp-validation-for="JokeQuestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label style="color:black" asp-for="JokeAnswer" class="control-label"></label>
                <input asp-for="JokeAnswer" class="form-control" />
                <span asp-validation-for="JokeAnswer" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 20px; margin-bottom: 20px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="background-color:grey; text-decoration:none; color:blue; padding: 10px; margin-top: 20px; border-radius: 7%" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
