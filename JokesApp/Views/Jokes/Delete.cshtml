@model JokesApp.Models.Joke

@{
    ViewData["Title"] = "Delete";
}

<h1 style="background-color:grey; color: black; max-width: 400px; padding: 20px">Delete</h1>

<div style="background-color:grey; color:black; padding: 20px">
<h3 >Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row">

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JokeQuestion)
        </dd>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JokeAnswer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a style="background-color:grey; text-decoration:none; color:blue; padding: 10px; margin-top: 20px; border-radius: 7%" asp-action="Index">Back to List</a>
    </form>
</div>
